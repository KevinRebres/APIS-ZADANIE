<Window x:Class="Warehouse.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Customers" Height="490" Width="450" Loaded="Window_Loaded" ResizeMode="CanMinimize">
    <Grid>
        <Label Content="Available customers" HorizontalAlignment="Left" Margin="130,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <DataGrid Name="CustomerDataGrid" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="360" Width="420" FontSize="20" MouseDoubleClick="CustomerDataGrid_MouseDoubleClick" IsReadOnly="True"/>
        <Button x:Name="AddCustomerButton" Content="Add Customer" HorizontalAlignment="Left" Margin="10,410,0,0" VerticalAlignment="Top" Height="40" Width="210" FontSize="20" Click="AddCustomerButton_Click"/>
        <Button x:Name="RemoveCustomerButton" Content="Remove Customer" HorizontalAlignment="Left" Margin="220,410,0,0" VerticalAlignment="Top" Height="40" Width="210" FontSize="20" Click="RemoveCustomerButton_Click" Grid.ColumnSpan="2"/>
        
    </Grid>
</Window>
